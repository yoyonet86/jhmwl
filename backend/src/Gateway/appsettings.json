{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]
      },
      "users": {
        "ClusterId": "users",
        "Match": { "Path": "/users/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/users" } ]
      },
      "drivers": {
        "ClusterId": "drivers",
        "Match": { "Path": "/drivers/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/drivers" } ]
      },
      "vehicles": {
        "ClusterId": "vehicles",
        "Match": { "Path": "/vehicles/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/vehicles" } ]
      },
      "orders": {
        "ClusterId": "orders",
        "Match": { "Path": "/orders/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/orders" } ]
      },
      "dictionary": {
        "ClusterId": "dictionary",
        "Match": { "Path": "/dictionary/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/dictionary" } ]
      }
    },
    "Clusters": {
      "auth": { "Destinations": { "d1": { "Address": "http://authservice:8080/" } } },
      "users": { "Destinations": { "d1": { "Address": "http://userservice:8080/" } } },
      "drivers": { "Destinations": { "d1": { "Address": "http://driverservice:8080/" } } },
      "vehicles": { "Destinations": { "d1": { "Address": "http://vehicleservice:8080/" } } },
      "orders": { "Destinations": { "d1": { "Address": "http://orderservice:8080/" } } },
      "dictionary": { "Destinations": { "d1": { "Address": "http://dictionaryservice:8080/" } } }
    }
  }
}
